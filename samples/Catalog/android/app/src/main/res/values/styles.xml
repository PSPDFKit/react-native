<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/PSPDFKit.Theme.Default">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="pspdf__settingsModePickerItemStyle">@style/AppTheme.SettingsModePickerItemStyle</item>
        <item name="pspdf__tabBarStyle">@style/AppTheme.TabbarStyle</item>
        <item name="pspdf__mainToolbarStyle">@style/AppTheme.MainToolbarStyle</item>
        <item name="pspdf__actionBarIconsStyle">@style/AppTheme.ActionBarIconsStyle</item>
    </style>

    <style name="AppTheme.ActionBarIconsStyle">
        <item name="pspdf__iconsColor">@color/color_primary_dark</item>
        <item name="pspdf__iconsColorActivated">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.MainToolbarStyle">
        <item name="pspdf__backgroundColor">@color/color_primary</item>
        <item name="pspdf__textColor">@color/color_primary</item>
    </style>

    <style name="AppTheme.TabbarStyle">
        <item name="pspdf__backgroundColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.SettingsModePickerItemStyle">
        <item name="pspdf__itemTint">@color/color_primary</item>
    </style>
</resources>
