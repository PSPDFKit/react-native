{
  "recurseDepth": 10,
  "source": {
    "include": ["index.js", "./lib/"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "tags": {
    "allowUnknownTags": ["component"]
  },
  "templates": {
    "default": {
      "layoutFile": "documentation/jsdoc-layout.tmpl",
      "staticFiles": {
        "include": ["documentation/jsdoc-assets/", "documentation/jsdoc-search/statics/"]
      }
    },
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "plugins": ["documentation/jsdoc-search/search.js"],
  "opts": {
    "destination": "./jsdoc",
    "recurse": true,
    "readme": "documentation/jsdoc.md"
  }
}
